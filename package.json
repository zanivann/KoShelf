{
  "scripts": {
    "build": "npm run build-css-prod && npm run build-calendar-prod && tsc",
    "build-css": "tailwindcss -i ./assets/css/input.css -o ./assets/style.css --watch",
    "build-css-prod": "tailwindcss -i ./assets/css/input.css -o ./assets/style.css --minify",
    "build-calendar-prod": "tailwindcss -i ./assets/css/calendar.css -o ./assets/calendar.css --minify",
    "format": "prettier --write \"assets/ts/**/*.ts\"",
    "format:check": "prettier --check \"assets/ts/**/*.ts\"",
    "lint": "eslint \"assets/ts/**/*.ts\"",
    "lint:fix": "eslint \"assets/ts/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@event-calendar/build": "^4.4.1",
    "@event-calendar/core": "^4.7.1",
    "@event-calendar/day-grid": "^3.12.0",
    "@fluent/bundle": "^0.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.10",
    "@types/event-calendar__core": "^4.7.0",
    "@types/event-calendar__day-grid": "^3.4.1",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.49.0"
  }
}